<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>List of All Articles</h1>

  <table>
    <thead>
    <tr>
      <th>Title </th>
      <th>Description </th>
      <th colspan="3"> Action  </th>
    </tr>
    </thead>
  
    <tbody>
      <%for article in @articles%>
      <tr>
        <td><%=article.title %></td>
        <td><%=article.description%></td>
        <td><%= link_to 'Show',article %></td>
        <td><%= link_to 'Edit' ,edit_article_path(article) %></td>
        <%# get the prefix from raild route expanded add _path in it and then in () add id of it. %>
        <td><%= link_to 'Delete',article ,method: :delete ,:data => {:confirm => 'Are you sure?'} %></td>
      </tr>
      <%end%>
    </tbody>
  </table>

  <%=link_to 'Add New Article', new_article_path%>
</body>
</html>