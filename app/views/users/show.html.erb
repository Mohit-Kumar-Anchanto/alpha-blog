<h1 class="text-center mt-4 text-black"><%= @user.username %>'s Profile</h1>

<%= gravatar(@user,size:200)%>


<h3 class="text-center mt-4 text-black">My Article's</h3>

<br>
<br>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8">
      <% if logged_in? and current_user == @user %>
        <%= link_to  "Edit Profile", edit_user_path ,class:"btn btn-outline-info btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' , obj:@user.articles%>


<div class="flickr_pagination mb-4 mt-4">
  <%= will_paginate @articles, :container => false %>
</div>


