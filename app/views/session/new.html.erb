<h1 class="text-center mt-4 md-4 text-black">Login</h1>



<div id="page-content">
  <div class="container mt-4" >
      <div class="row justify-content-center">
        <div class="col-10">
        <%= form_with(scope: :session, url: 'login', class:"shadow p-3 mb-3 bg-info rounded",local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :Email , class:"col-2 col-form-label"%><br/> 
            <div class="col-10">
              <%= f.text_field :email  ,placeholder:"Enter your Email", class:"form-control"%> 
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :Password , class:"col-2 col-form-label"%><br/> 
            <div class="col-10">
              <%= f.password_field :password  ,placeholder:"Enter your Password", class:"form-control"%> 
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit "Login", class:"btn btn-outline-light btn-lg" %> 
          </div>
        <% end %>
        </div>
      </div>
  </div>
</div>
