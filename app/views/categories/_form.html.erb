<div id="page-content">
  <div class="container">
      <div class="row justify-content-center">
        <div class="col-10">
        <%= render  "shared/errors" ,obj: @category%>
        <%= form_with(model: @category,class:"shadow p-3 mb-3 bg-info rounded",local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :name , class:"col-2 col-form-label" %><br/> 
            <div class="col-10">
              <%= f.text_field :name,class:"form-control" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit class:"btn btn-outline-light btn-lg" %> 
          </div>
        <% end %>

          <div class="form-group row justify-content-center">
            <%= link_to 'Return to Listing',articles_path ,class:"btn btn-success btn-lg"%>
          </div>
        </div>
      </div>
  </div>
</div>